{
  "compilerOptions": {
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom","esnext"],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    ".yalc",
    "build",
    "dist",
    "public"
  ]
}
